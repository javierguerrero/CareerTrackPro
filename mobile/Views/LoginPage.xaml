<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicSchool.Mobile.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="30">
        <Label Text="CareerTrack Pro" FontSize="Large" Margin="0,20" />
        <Label Text="Welcome! Please enter your username and password to log in:" />
        
        <Entry Placeholder="User name" Text="{Binding Username}" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        
        <Button Text="Enter" Command="{Binding LoginTapCommand}" Margin="10" />
    </VerticalStackLayout>
</ContentPage>