<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicSchool.Mobile.Views.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Por favor, ingresar los datos para tu registro" />
        
        <!--Profile data-->
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="First Name" Text="{Binding FirstName}" />
        <Entry Placeholder="Last Name" Text="{Binding LastName}" />
        <Entry Placeholder="Email" Text="{Binding Email}" />

        <!--Authentication data-->
        <Entry Placeholder="User Name" Text="{Binding UserName}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

        <Button Text="Register" Command="{Binding RegisterTapCommand}" Margin="10" />
    </VerticalStackLayout>
</ContentPage>